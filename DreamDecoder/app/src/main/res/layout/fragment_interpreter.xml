<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/interpretar_bg">

    <!-- Input area for dream symbol/keyword -->
    <EditText
        android:id="@+id/dreamKeywordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_bg"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:hint="Enter dream symbol or keyword"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="250dp"
        android:textColor="#bf6fcb"
        android:textColorHint="#bf6fcb" />

    <!-- Button to trigger interpretation -->

    <ImageButton
        android:id="@+id/interpretButton"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/interpret_button"
        android:layout_gravity="center_horizontal"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/openInBrowserButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/browser_button"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>


    <!-- Area to display interpretation result -->
    <TextView
        android:id="@+id/interpretationResult"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:fontFamily="@font/baloo"
        android:text="Interpretation will appear here..."
        android:textSize="16sp"
        android:background="@drawable/interpretresult_bg"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_marginTop="60dp"
        android:padding="7dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>

</LinearLayout>
